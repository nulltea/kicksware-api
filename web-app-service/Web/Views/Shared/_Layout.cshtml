		</div>
	</div>
	<!-- Slider Menu -->
	<div class="hamburger">
		<span></span>
		<span></span>
		<span></span>
	</div>
	<div class="menu trans_400">
		<div class="menu-container">
			<div class="slider-menu-content">
				<div class="slider-menu-search">
					<form action="#">
						@Html.VectorIconRender("search.svg")
						<input type="search" required="required" class="menu-search-input">
					</form>
				</div>
				<ul class="slider-menu-nav">
					<li class="slider-menu-item">
						<a asp-controller="Home" asp-action="Index">Home</a>
					</li>
					<li class="slider-menu-item">
						<a asp-controller="Home" asp-action="Index">Profile</a>
					</li>
					<li class="slider-menu-item">
						<a asp-controller="Shop" asp-action="References">Shop</a>
					</li>
					<li class="slider-menu-item">
						<a asp-controller="Sell" asp-action="NewProduct">Sell</a>
					</li>
					<li class="slider-menu-item">
						<a asp-controller="Home" asp-action="Index">About</a>
