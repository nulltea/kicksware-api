@using Core.Reference
@using web_app_service.Utils.Helpers

@{
    Layout = "~/Views/Sell/NewProduct.cshtml";
}

@section Styles
{
    <link rel="stylesheet/less" type="text/css" href="~/css/sell/search.less" />
}


<div class="container search-content">
    <ul class="tabs-control" role="tablist">
        <li>
            <input type="radio" name="tabs" id="tab1" checked />
            <label for="tab1" role="tab" aria-selected="true" aria-controls="panel1" tabindex="0">Search</label>
            <div id="tab-content1" class="tab-content" role="tabpanel" aria-hidden="false">
                <div class="row my-3">
                    <span>@Html.VectorIconRender("search.svg")</span>
                    <input id="auto-search" type="text" name="prefix">
                    <div class="list-select">
                        <select asp-items="@Html.GetEnumSelectList<SearchType>()" class="dropdown_item_select" id="currency">
                            <option disabled="">Category</option>
                        </select>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="search-grid">
                    </div>
                </div>
            </div>
        </li>
        <li>
            <input type="radio" name="tabs" id="tab2" />
            <label for="tab2" role="tab" aria-selected="false" aria-controls="panel2" tabindex="0">Photo</label>
            <div id="tab-content2" class="tab-content" role="tabpanel" aria-labelledby="specification" aria-hidden="true">
                @*TODO Image Search*@
            </div>
        </li>
    </ul>
</div>

@section Scripts
{
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/js/sell/search.js"></script>
    <script type="text/javascript">
        initCustomDropDown();
        initAutoSearch("@Url.Action("SearchAuto")");
    </script>
}
